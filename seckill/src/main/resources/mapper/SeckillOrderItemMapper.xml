<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ht.seckill.mapper.SeckillOrderItemMapper">

    <resultMap type="com.ht.seckill.bean.SeckillOrderItem" id="SeckillOrderItemMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="proId" column="pro_id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SeckillOrderItemMap">
        select
          id, pro_id, order_id, create_time, update_time, is_delete
        from seckill.seckill_order_item
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SeckillOrderItemMap">
        select
          id, pro_id, order_id, create_time, update_time, is_delete
        from seckill.seckill_order_item
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SeckillOrderItemMap">
        select
          id, pro_id, order_id, create_time, update_time, is_delete
        from seckill.seckill_order_item
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="proId != null">
                and pro_id = #{proId}
            </if>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="isDelete != null">
                and is_delete = #{isDelete}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into seckill.seckill_order_item(pro_id, order_id, create_time, update_time, is_delete)
        values (#{proId}, #{orderId}, #{createTime}, #{updateTime}, #{isDelete})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update seckill.seckill_order_item
        <set>
            <if test="proId != null">
                pro_id = #{proId},
            </if>
            <if test="orderId != null">
                order_id = #{orderId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from seckill.seckill_order_item where id = #{id}
    </delete>

</mapper>
